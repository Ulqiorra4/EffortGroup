<Page x:Class="EffortGroup.PageEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EffortGroup"
      mc:Ignorable="d" 
           d:DesignHeight="720" d:DesignWidth="1024"
      Title="PageAdmin">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="100"/>
            <!-- устанавливаем ширину кнопки -->
            <Setter Property="Height" Value="100"/>
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="Background" Value="White"/>
            <!-- Пример цвета фона -->
            <Setter Property="Foreground" Value="Black" />
            <!-- Пример цвета текста -->
            <Setter Property="BorderBrush" Value="#D1AE8A"/>
            <!-- Пример цвета границы -->
            <Setter Property="BorderThickness" Value="1"/>
            <!-- Толщина границы -->
            <Setter Property="FontSize" Value="14"/>
            <!-- Размер шрифта -->
            <Setter Property="FontWeight" Value="Bold"/>
            <!-- Жирный шрифт -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                            <!-- CornerRadius здесь -->
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid HorizontalAlignment="Center" Width="1024" Height="720" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="291*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="192"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBox Name="Search" Grid.Column="1" Height="40" Width="482" HorizontalAlignment="Left" Margin="87,0,0,0" VerticalAlignment="Center" TextWrapping="Wrap"
                 Style="{StaticResource SearctText}" GotFocus="Login_GotFocus" LostFocus="Login_LostFocus"></TextBox>
        <TextBlock Text="Поиск" Style="{StaticResource TextBlockStyle}"
           IsHitTestVisible="False" x:Name="SearchPlaceholder" Grid.Column="1" Margin="87,0,579,0" Height="22" VerticalAlignment="Center"/>

        <Button Name="btnSearch" Grid.Column="1" Height="40" Width="NaN" Margin="569,0,126,0" Style="{StaticResource SearchBtn}" Click="btnSearch_Click"/>

        <StackPanel Grid.Row="1">
            <Button x:Name="CompTech" Margin="20,10,20,10" Style="{StaticResource ButtonAdm2}" Content="Компьютерная&#xA;техника"
                Click="CompTech_Click" Height="70"/>
            <Button x:Name="Per" Grid.Column="0" Style="{StaticResource ButtonAdm3}" Content="Перефирийные&#xA;устройства"
          Height="70" Margin="20,10,20,20" Click="Per_Click"/>
            <Button x:Name="Back" Style="{StaticResource BackBtn}" Content="Назад" Click="Back_Click" Margin="20,5,20,20"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="279,0,0,0">
            <WrapPanel Name="ButtonsPanel">
                <ItemsControl Name="DynamicItems" ItemsSource="{Binding Buttons}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource CustomButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="{Binding ImageSource}" Width="30" Height="30" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Content}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>

        <StackPanel>
            <Image MouseLeftButtonUp="LogoHyperlink_Click" Height="137" Margin="15" Source="/Images/LogoP.png"></Image>
        </StackPanel>

        <Button x:Name="AddComp" Content="Добавить" Style="{StaticResource AddBtn}"
                Visibility="Collapsed" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Height="50" Width="100" Click="AddComp_Click" />
        <Button x:Name="AddPer" Content="Добавить" Style="{StaticResource AddBtn}"
        Visibility="Collapsed" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Height="50" Width="100" Click="AddPer_Click" />
        <Button Margin="20" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right"
                Grid.Column="1" Click="ExitButton_Click" Style="{StaticResource ExitButtonStyle}" Height="30" Width="30" />


    </Grid>
</Page>

