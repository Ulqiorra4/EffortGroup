<Page x:Class="EffortGroup.Login.PageLogin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:EffortGroup.Login"
      mc:Ignorable="d"
      Title="Авторизация"
      Height="475" Width="375"
      WindowHeight="500">

    <Grid>
        <Image x:Name="Logo" MouseLeftButtonUp="LogoHyperlink_Click" Source="/Images/Logo1.png" Width="310" Margin="36,40,29,315"
    Cursor="Hand" />

        <StackPanel Margin="34,185,31,194" Width="310">
            <Grid Margin="5">
                <!-- Placeholder style from example 2 -->
                <TextBox x:Name="Login" Width="300" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Height="35" GotFocus="Login_GotFocus" LostFocus="Login_LostFocus"/>
                <TextBlock Text="Логин" Style="{StaticResource TextBlockStyle}" VerticalAlignment="Center"
                           IsHitTestVisible="False" x:Name="LoginPlaceholder"/>
            </Grid>
            <Grid Margin="5">
                <!-- Placeholder style from example 2 -->
                <PasswordBox x:Name="Password" HorizontalAlignment="Center" Width="300" Height="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                             GotFocus="Password_GotFocus" LostFocus="Password_LostFocus"/>
                <TextBlock Text="Пароль" Style="{StaticResource TextBlockStyle}" VerticalAlignment="Center"
                           IsHitTestVisible="False" x:Name="PasswordPlaceholder"/>
            </Grid>
        </StackPanel>

        <Button Margin="5" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1" Click="ExitButton_Click" Style="{StaticResource ExitButtonStyle}" />
        <Button Name="Enter" HorizontalAlignment="Center" Content="Войти" Width="250" Height="50" VerticalAlignment="Top" Margin="0,322,0,0" Style="{StaticResource ButtonLog}" Click="Enter_Click"/>
    </Grid>
</Page>