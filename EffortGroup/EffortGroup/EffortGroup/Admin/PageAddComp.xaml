<Page x:Class="EffortGroup.Admin.PageAddComp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EffortGroup.Admin"
      mc:Ignorable="d" 
            d:DesignHeight="720" d:DesignWidth="1024"
      Title="PageAddComp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image MouseLeftButtonUp="LogoHyperlink_Click" Height="137" Source="/Images/Logo1.png"
    Cursor="Hand" />

        <TextBlock Text="Бренд:" Margin="5" Grid.Row="1" Grid.Column="0" />
        <TextBox x:Name="Brand" Margin="5,5,0,5" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Модель:" Margin="5" Grid.Row="2" Grid.Column="0"/>
        <TextBox x:Name="Model" Margin="5,5,0,5" Grid.Row="2" Grid.Column="1"/>

        <TextBlock Text="Сотрудник(Id):" Margin="5" Grid.Row="3" Grid.Column="0" />
        <TextBox x:Name="IdEmp" Margin="5,5,0,5" Grid.Row="3" Grid.Column="1"/>

        <Image x:Name="PhotoComp"  Grid.Row="5" Grid.Column="2" VerticalAlignment="Top" HorizontalAlignment="Right" Width="165" Height="100"/>

        <Button Content="Выбрать фото" Padding="5"  Grid.Row="6" Grid.Column="2" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{StaticResource AddPhotoBtn}" Click="SelectPhotoButton_Click"/>
        <Button Content="Добавить" x:Name="Add" Margin="5" Grid.Row="4" Grid.Column="1" Click="Add_Click"/>
        <Button Content="Назад" x:Name="back" Margin="5" Grid.Row="6" Grid.Column="1" Style="{StaticResource BackBtn}" Click="back_Click"/>
        <Button  Margin="5" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right"  Grid.Column="2" Click="ExitButton_Click" Style="{StaticResource ExitButtonStyle}" />
    </Grid>
</Page>
