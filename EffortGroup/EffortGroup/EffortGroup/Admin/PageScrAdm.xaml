<Page x:Class="EffortGroup.Admin.PageScrAdm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EffortGroup.Admin"
      mc:Ignorable="d" 
            d:DesignHeight="720" d:DesignWidth="1024"
      Title="PageScrAdm">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="266*"/>
            <ColumnDefinition Width="266*"/>
            <ColumnDefinition Width="266*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="188*"/>
            <RowDefinition Height="374*"/>
            <RowDefinition Height="163*"/>
        </Grid.RowDefinitions>

        <Image x:Name="Logo" MouseLeftButtonUp="LogoHyperlink_Click" Source="/Images/Logo.png"
Cursor="Hand" Grid.Row="0" Grid.Column="1"  VerticalAlignment="Center"/>


        <Button Content="Сотрудники" Click="Employee_Click"  Style="{StaticResource ButtonMenuAdm1}" Grid.Row="1" VerticalAlignment="Center"/>
        <Button Content="Компьютерная&#xA;техника" Click="CompTech_Click" Style="{StaticResource ButtonMenuAdm2}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" />
        <Button Content="Перефирийные&#xA;устройства" Click="Per_Click" Style="{StaticResource ButtonMenuAdm3}" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" />

        <Button Margin="0,20,20,0" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="2" Click="ExitButton_Click" Style="{StaticResource ExitButtonStyle}" Height="30" Width="30" />
        <Button x:Name="Back" Style="{StaticResource BackBtn}" Content="Назад" HorizontalAlignment="Center" Click="Back_Click" Grid.Row="2" Grid.Column="1" VerticalAlignment="Top" Height="30"/>
    </Grid>
</Page>
