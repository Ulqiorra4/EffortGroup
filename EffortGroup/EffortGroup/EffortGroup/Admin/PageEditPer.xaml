<Page x:Class="EffortGroup.Admin.PageEditPer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EffortGroup.Admin"
      mc:Ignorable="d"
      d:DesignHeight="720" d:DesignWidth="1024"
      Title="PageEditPer">

    <Grid HorizontalAlignment="Center" Width="800" Height="450" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image MouseLeftButtonUp="LogoHyperlink_Click"
               Grid.Column="0" Cursor="Hand" 
               Source="/Images/Logo1.png" 
               HorizontalAlignment="Right" Margin="10" MaxHeight="200" MaxWidth="200"/>

        <TextBlock Text="Редактирование периферийного устройства" Grid.Column="1" FontSize="24" FontWeight="Bold" />

        <TextBlock Text="Название:" Margin="5" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Margin="5" Grid.Column="1" Grid.Row="2" Height="30" Width="200" VerticalAlignment="Center"/>

        <TextBlock Text="Тип:" Margin="5" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox x:Name="TypeTextBox" Margin="5" Grid.Column="1" Grid.Row="3" Height="30" Width="200" VerticalAlignment="Center"/>

        <TextBlock Text="Фото:" Margin="5" Grid.Row="4" VerticalAlignment="Center"/>
        <TextBox x:Name="PhotoTextBox" Margin="5" Grid.Column="1" Grid.Row="4" Height="30" Width="200" VerticalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right">
            <Button x:Name="SelectPhotoButton" Content="Выбрать фото" Click="SelectPhotoButton_Click" Padding="10,5" FontWeight="Bold" Margin="5" Width="150" Height="40"/>
            <Image x:Name="PeripheralImage" Width="150" Height="150" Margin="5"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Padding="10,5" FontWeight="Bold" Margin="5" Width="100" Height="40"/>
            <Button x:Name="DeleteButton" Content="Удалить" Click="DeleteButton_Click" Padding="10,5" FontWeight="Bold" Margin="5" Width="100" Height="40"/>
        </StackPanel>

        <Button Margin="5" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1" Click="ExitButton_Click" Style="{StaticResource ExitButtonStyle}" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>