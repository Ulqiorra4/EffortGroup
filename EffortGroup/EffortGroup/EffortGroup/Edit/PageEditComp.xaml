<Page x:Class="EffortGroup.PageEditComp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EffortGroup"
      mc:Ignorable="d" 
           d:DesignHeight="720" d:DesignWidth="1024"
      Title="PageEditComp">

    <Grid HorizontalAlignment="Center" Width="1024" Height="722" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="160"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image MouseLeftButtonUp="LogoHyperlink_Click"
               Grid.Column="0" Cursor="Hand" Margin="15" Source="/Images/LogoP.png" HorizontalAlignment="Right" MaxHeight="200" MaxWidth="200"/>

        <TextBlock Text="Id компьютера" Margin="5,5,5,5" Grid.Row="1" Grid.Column="0"/>
        <TextBox x:Name="IdCompTextBox" Margin="5" Grid.Column="1" Grid.Row="1"  Height="30" Width="200" VerticalAlignment="Center" IsEnabled="False"/>

        <TextBlock  Text="Бренд:"  Margin="5" Grid.Row="2" VerticalAlignment="Center"  />
        <TextBox x:Name="BrandTextBox"  Margin="5" Grid.Column="1" Grid.Row="2"  Height="30" Width="200" VerticalAlignment="Center"/>

        <TextBlock  Text="Модель:"  Margin="5" Grid.Row="3" VerticalAlignment="Center" />
        <TextBox x:Name="ModelTextBox"  Margin="5" Grid.Column="1" Grid.Row="3"   Height="30" Width="200" VerticalAlignment="Center"/>

        <TextBlock  Text="ID сотрудника:" Margin="5" Grid.Row="4" VerticalAlignment="Center" />
        <TextBox x:Name="IdEmpTextBox" Margin="5" Grid.Column="1" Grid.Row="4"  Height="30" Width="200" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" Height="160" Width="500" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right">
            <Button  x:Name="SelectPhotoButton"  Content="Выбрать фото" Click="SelectPhotoButton_Click" Padding="10,5" FontWeight="Bold" Margin="5" Width="150" Height="40" />
            <Image  x:Name="ComputerImage"  Width="150" Height="150" Margin="5"/>
        </StackPanel>

        <TextBlock Text="Ремон" Grid.Row="5" Grid.Column="0" Margin="10" VerticalAlignment="Center"/>
        <ComboBox x:Name="RepairComboBox" Grid.Row="5" Grid.Column="1" Margin="10,10,439,10" VerticalAlignment="Center" Width="80">
            <ComboBoxItem Content="Да"/>
            <ComboBoxItem Content="Нет"/>
        </ComboBox>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="6" HorizontalAlignment="Right"/>
        <Button Margin="5" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1" Click="ExitButton_Click" Style="{StaticResource ExitButtonStyle}" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5" Grid.Row="10" Grid.Column="1" Style="{StaticResource SaveBtn}" Click="SaveButton_Click" />
 <Button Content="Удалить" Padding="5" Grid.Row="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{StaticResource DeleteBtn}" Click="DeleteButton_Click" Width="100"/>
        </Grid>
</Page>
